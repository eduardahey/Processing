int[] cores = new int[3];
 void setup(){
  size(300,300);
  noStroke();
  for(int i=0;i<3;i++){
    cores[i] = color(random(255),random(255),random(255));
  }
 }
void draw(){
   background(220);
    for(int i=0;i<3;i++){
      fill(cores[i]);
      rect(i*100,100,100,100);
  }
   for(int i=0;i<3;i++){
if(mouseX >= i*100 && mouseX <= i*100+100 && mouseY >=100 && mouseY <= 200){
  
  cores[i] = color(random(255),random(255),random(255));
   }
}
}
